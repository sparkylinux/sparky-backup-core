#!/bin/bash

# Shortcuts to 'sparkybackup' command
# Copyright 2017-2021 under the GNU GPL2 License by pavroo <pavroo@onet.eu>
# Last update 2021/04/06 by pavroo

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-backup-core"
if [ "`cat /etc/default/locale | grep LANG= | grep de`" != "" ]; then
. $DEFLOCDIR/de
elif [ "`cat /etc/default/locale | grep LANG= | grep el`" != "" ]; then
. $DEFLOCDIR/el
elif [ "`cat /etc/default/locale | grep LANG= | grep es`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep LANG= | grep fr`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep LANG= | grep hu`" != "" ]; then
. $DEFLOCDIR/hu
elif [ "`cat /etc/default/locale | grep LANG= | grep id_ID`" != "" ]; then
. $DEFLOCDIR/id_ID
elif [ "`cat /etc/default/locale | grep LANG= | grep it`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep LANG= | grep pl`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep LANG= | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep LANG= | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep LANG= | grep ru`" != "" ]; then
. $DEFLOCDIR/ru
else
. $DEFLOCDIR/en
fi

TESTROOT="`whoami`"
if [ "$TESTROOT" != "root" ]; then
	echo "$LOCAL39 ... $LOCAL14"
	exit 1
fi

if [ "$1" = "info" ]; then
	/usr/bin/sparkybackup info

elif [ "$1" = "efi" ]; then
	/usr/bin/sparkybackup efi

elif [ "$1" = "skel" ]; then
	/usr/bin/sparkybackup skel

elif [ "$1" = "clean" ]; then
	/usr/bin/sparkybackup clean

elif [ "$1" = "edit" ]; then
	/usr/bin/sparkybackup edit

elif [ "$1" = "installer" ]; then
	/usr/bin/sparkybackup installer

elif [ "$1" = "dist" ]; then
	/usr/bin/sparkybackup dist

elif [ "$1" = "cache" ]; then
	/usr/bin/sparkybackup cache

elif [ "$1" = "log" ]; then
	/usr/bin/sparkybackup log

else
	echo "spb $LOCAL40 sparkybackup"
	echo "$LOCAL41:"
	echo ""
	echo "sudo spb info|efi|skel|dist|edit|installer|clean|cache|log"
	echo ""
	echo "$LOCAL4:"
	echo ""
	echo "    sudo spb info"
	echo "$LOCAL54"
	echo ""
	echo "    sudo spb efi"
	echo "$LOCAL59"
	echo ""
	echo "    sudo spb skel"
	echo "$LOCAL75"
	echo ""
	echo "    sudo spb dist"
	echo "$LOCAL6"
	echo ""
	echo "    sudo spb edit"
	echo "$LOCAL42"
	echo ""
	echo "    sudo spb installer"
	echo "$LOCAL46"
	echo ""
	echo "    sudo spb clean"
	echo "$LOCAL43"
	echo ""
	echo "    sudo spb cache"
	echo "$LOCAL44"
	echo ""
	echo "    sudo spb log"
	echo "$LOCAL74"
fi

exit 0
